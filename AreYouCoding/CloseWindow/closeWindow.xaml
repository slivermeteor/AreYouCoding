<Window x:Class="AreYouCoding.CloseWindow.closeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AreYouCoding.CloseWindow"
        mc:Ignorable="d"
        Title="CloseWindow?" Height="115.6" Width="292.022" Closing="Window_Closing">
    <Grid>
        <CheckBox x:Name="Exit" Content="Exit Process" HorizontalAlignment="Left" Margin="20,19,0,0" VerticalAlignment="Top" Checked="Exit_Checked" Click="Exit_Click"/>
        <CheckBox x:Name="Minimize" Content="Minimize Window" HorizontalAlignment="Left" Margin="135,19,0,0" VerticalAlignment="Top" Checked="Minimize_Checked" Click="Minimize_Click"/>
        
        <CheckBox x:Name="bAskAgain" Content="Don't ask me next time" HorizontalAlignment="Left" Margin="20,54,0,0" VerticalAlignment="Top"/>
        
        <Button x:Name="Confirm" Content="Confirm" HorizontalAlignment="Left" Margin="184,51,0,0" VerticalAlignment="Top" Width="75" Click="Confirm_Click"/>

    </Grid>
</Window>
